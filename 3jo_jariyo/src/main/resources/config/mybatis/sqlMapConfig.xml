<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	
<configuration>
	<!-- 루트태크 : 하나만 존재할 수 있다. xml 시작을 알리는 태그  -->

	<!-- 설정파일에서 사용할 프로퍼티의 파일의 경로 지정: classpath -->
	<properties resource="config/mybatis/db.properties"/>
	
	<!-- SQL의 결과를 담을 VO 객체들의 별칭을 설정하여 사용의 편의를 도모  -->
	<typeAliases>
		<typeAlias alias="Member" type="com.jariyo.repository.domain.Member" />
		<typeAlias alias="Booking" type="com.jariyo.repository.domain.Booking" />
		<typeAlias alias="PlaceEval" type="com.jariyo.repository.domain.PlaceEval" />
		<typeAlias alias="Place" type="com.jariyo.repository.domain.Place" />
		<typeAlias alias="TeamMatching" type="com.jariyo.repository.domain.TeamMatching" />
		<typeAlias alias="Competition" type="com.jariyo.repository.domain.Competition" />
		<typeAlias alias="ManGather" type="com.jariyo.repository.domain.ManGather" />
		<typeAlias alias="ManVolun" type="com.jariyo.repository.domain.ManVolun" />
		<typeAlias alias="Comment" type="com.jariyo.repository.domain.Comment" />
		<typeAlias alias="Msg" type="com.jariyo.repository.domain.Msg" />
		<typeAlias alias="MatchingComment" type="com.jariyo.repository.domain.MatchingComment" />
		<typeAlias alias="ManVolunComment" type="com.jariyo.repository.domain.ManVolunComment" />
		<typeAlias alias="ManGatherComment" type="com.jariyo.repository.domain.ManGatherComment" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<!-- Content 주석문
		사용자가 직접 작성한 SQL 문장들이 들어있는 xml 파일의 위치를 알려준다.
	 -->
	<mappers>
		<mapper resource="config/sqlmap/booking.xml"/>
		<mapper resource="config/sqlmap/comment.xml"/>
		<mapper resource="config/sqlmap/manGather.xml"/>
		<mapper resource="config/sqlmap/manVolun.xml"/>
		<mapper resource="config/sqlmap/myPage.xml"/>
		<mapper resource="config/sqlmap/msg.xml"/>
		<mapper resource="config/sqlmap/place.xml"/>
		<mapper resource="config/sqlmap/placeEval.xml"/>
		<mapper resource="config/sqlmap/teamMatching.xml"/>
		<mapper resource="config/sqlmap/competition.xml"/>
		<mapper resource="config/sqlmap/searchResult.xml"/>
		<mapper resource="config/sqlmap/login.xml"/>
		<mapper resource="config/sqlmap/signup.xml"/>
	</mappers>
</configuration>