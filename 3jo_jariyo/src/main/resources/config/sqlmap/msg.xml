<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jariyo.repository.mapper.MsgMapper"> <!-- 루트태그 -->

	<resultMap id="MsgMap" type="Msg" >
		<result column="msg_no" property="msgNo"></result>
		<result column="writer_id" property="writerId"></result>
		<result column="receiver_id" property="receiverId"></result>
		<result column="title" property="title"></result>
		<result column="content" property="content"></result>
		<result column="reg_date" property="regDate"></result>
		
	</resultMap>
	
	<!-- 내가 받은 쪽지 목록 가져오기 -->
	<select id ="selectReMsg" parameterType="string" resultMap="MsgMap">
		select *
		  from jariyo_message
		 where receiver_id = #{receiverId}
	</select>
	<!-- 내가 보낸 쪽지 목록 가져오기 -->
	<select id ="selectSeMsg" parameterType="string" resultMap="MsgMap">
		select *
		  from jariyo_message
		 where writer_id = #{writerId}
	</select>
	
