	<insert id="insertMsg" parameterType="Msg">
	insert into jariyo_message(
	msg_no, msg_from_to, from_name, content, title, trash, to_name, kind
				)values(
			s_jariyo_no.nextval, #{msgFromTo}, #{fromName}, #{content}, #{title}, #{trash}, #{toName}, #{kind}
			)
	</insert> 
	
	<select id = "selectMsgByNo" parameterType = "int" resultMap ="MsgMap" >
   	 select * 
	 from jariyo_message
	 where msg_no = #{msgNo} 
    </select>
    
	<select id = "selectdelMsg" parameterType = "int" resultMap ="MsgMap" >
   	 select * 
	 from jariyo_message
	 where trash = #{2} 
    </select>
    
    <delete id ="deleteMsg" parameterType = "int">
    delete jariyo_message 
     where msg_no = #{msgNo}
    </delete>
    
